<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="wrap_content" android:layout_width="wrap_content">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00e5ff" />
            <gradient android:angle="-90" android:startColor="#00b0ff" android:endColor="#0091ea"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00e5ff" />
            <solid android:color="#00e5ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00e5ff" />
            <gradient android:angle="-90" android:startColor="#00b0ff" android:endColor="#0091ea" />
        </shape>
    </item>
</selector>
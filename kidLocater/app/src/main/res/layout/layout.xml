<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

       <!-- <ImageView
            android:id="@+id/accueil"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            app:srcCompat="@drawable/kids1"
            tools:ignore="MissingConstraints" />-->
        <!--<ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/small_map"
            android:transitionName="logo_image"
            android:id="@+id/logo_image"
            />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/web_photo_editor"
            android:transitionName="logo_image"
            android:id="@+id/logo_image"/>

        <TextView
            android:id="@+id/logo_name"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_image"
            android:fontFamily="@font/aguafina_script"
            android:text="Soyez plus proche de votre enfant"
            android:paddingLeft="40dp"
            android:textColor="#03a9f4"
            android:textSize="25sp"
            android:transitionName="logo_text" />

        <!--<EditText
            android:id="@+id/email_or_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="40dp"
            android:hint="Téléphone ou e-mail"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/logo_name"
            android:id="@+id/tel_email"
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_tel"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/tel_email"
            android:id="@+id/password"
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true">
            <!--app:endIconMode="password_toggle"-->

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <!--<EditText
            app:passwordToggleEnabled="true"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="sans-serif"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:layout_below="@id/password"
            android:id="@+id/connexion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:hint="@string/connexion"
            android:padding="4dp"
            android:background="@layout/mybutton"
            android:textColorHint="@color/white" />
        <TextView
            android:id="@+id/fpw"
            android:layout_below="@id/connexion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/forgotten_password"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            />

        <Button
            android:layout_below="@+id/fpw"
            android:id="@+id/nv_cpt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:hint="@string/nv_cpt"
            android:padding="4dp"
            android:background="@layout/blue_button"
            android:textColorHint="@color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


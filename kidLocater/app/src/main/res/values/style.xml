    </style>

    <style name="MaterialAlertDialog_OUI_color" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.textColor</item>
    </style>

